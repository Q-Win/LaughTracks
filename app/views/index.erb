

<div class="background">

  <h1> Statistics</h1>
    <ul class="stats">
      <li>Comedian's average age: <%= @comedians.average_age%></li>
      <li> Special average length: <%= @specials.average_length%> minutes</li>
      <li> Cities comedians are from:
        <ul>
         <% @comedians.cities.each do |city|%>

           <li><%= city %></li>
           <%end%>
      </li>
    </ul>

  <h1> Comedians</h1>


  <% @comedians.each do |comedian| %>
  <div class="comedians">
    <ul >
      <li>Name: <%= comedian.name %></li>
      <li>Age: <%= comedian.age %></li>
      <li >Birthplace: <%= comedian.city %></li>
      <li> Specials:
        <ul><% comedian.specials.each do |special| %>
          <li class="specials"> "<%=special.name%>"  Run time: <%=special.length%> minutes </li>
          <% end %>
        </ul>
      </li>
      <br>
    </ul>
  </div>
  <% end %>



</div>
